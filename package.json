{
    "private": true,
    "name": "vue-svgicon",
    "workspaces": [
        "packages/*",
        "docs/*"
    ],
    "description": "A tool to create svg icon components. (vue 2.x)",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build --ignore @example/*",
        "build:doc": "lerna run build --scope @example/doc-demo",
        "test": "lerna run test --stream",
        "publish": "lerna publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MMF-FE/vue-svgicon.git"
    },
    "keywords": [
        "vue",
        "vue2.0",
        "svg",
        "icon",
        "svgicon"
    ],
    "author": "allenice <994298628@qq.com> (http://blog.allenice233.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MMF-FE/vue-svgicon/issues"
    },
    "homepage": "https://github.com/MMF-FE/vue-svgicon#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "prettier-stylelint": "^0.4.2",
        "stylelint": "^13.6.1",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json,tsx}": [
            "prettier --write",
            "git add"
        ],
        "*.scss": [
            "stylelint --fix",
            "git add"
        ]
    }
}
