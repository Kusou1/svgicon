{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": ".",
        "outDir": "dist",
        "types": ["webpack-env", "mocha", "chai"],
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
