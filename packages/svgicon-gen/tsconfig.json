{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noLib": false,
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "dist",
        "lib": ["esnext", "dom"],
        "outDir": "dist",
        "types": ["node", "mocha", "chai"],
    },
    "include": ["src/**/*.ts", "typings/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
