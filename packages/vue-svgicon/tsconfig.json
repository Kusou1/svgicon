{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack-env", "node", "mocha", "chai"],
        "typeRoots": ["typings"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "tests/**/*.vue",
        "typings/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
